<div class="stepper">
  <a href="/users">Home</a> / Profile
</div>
<div>
  <a href="/users">Home</a>
</div>

<h1>{{user.firstName}} {{user.lastName}}</h1>
<div class="user-container">
  <div>
    <img src="{{user.photoUrl}}" alt="{{user.username}}'s profile photo">
  </div>
  <div class="user-info">
    <div class="button-container">
      <div class="button primary">
        <a href="/users/{{user._id}}/edit">Update INFO</a>
      </div>
      <div class="button warning">
        <a href="/users/{{user._id}}/delete">Delete ME</a>
      </div>
    </div>
    <div>Username:
      <strong>{{user.username}}</strong>
    </div>
    <div>Email:
      <strong>{{user.email}}</strong>
    </div>
    <div class="visit-store">
      <a href="/users/{{user._id}}/stores">Stores To Visit</a>
    </div>
  </div>
</div>