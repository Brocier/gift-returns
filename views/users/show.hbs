<div>
    <div>
        <a href="/users">Home</a>
    </div>

    <h1>{{user.firstName}} {{user.lastName}}</h1>
    <div>
        <img src="{{user.photoUrl}}" alt="{{user.username}}'s profile photo">
    </div>
    <div>
        <div>
            <a href="/users/{{user._id}}/edit">Update User Profile</a>
        </div>
        <div>
            <a href="/users/{{user._id}}/delete">Delete User Profile</a>
        </div>

        <div>Username: {{user.username}}</div>
        <div>Email: {{user.email}}</div>
    </div>
    <div>
        <a href="/users/{{user._id}}/stores">Stores To Visit</a>
    </div>
</div>