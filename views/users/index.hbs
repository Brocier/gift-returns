<div class="stepper">
    Home
</div>
<div>
    <div class="user-cards">
        {{#each users}}
        <div class="user-card">
            <a href="/users/{{this._id}}" class="link">
                <div class="user-image">
                    {{#if user.photoUrl}}
                    <img src="{{user.photoUrl}}" alt="{{user.username}}'s profile photo"> {{else}}
                    <img src="https://picsum.photos/200/300" alt="{{user.username}}'s profile photo"> {{/if}}
                </div>
                <div>
                    {{this.firstName}} {{this.lastName}}
                </div>
            </a>
        </div>
        {{/each}}
    </div>

    <div class="nav-buttons">
        <a href="/users/new" class="link">
            <div class="link-button">New User</div>
        </a>
    </div>
</div>