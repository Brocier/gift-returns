<div class="stepper">
  Home
</div>
<div class="profile-card-container">
  <div class="user-cards">
    {{#each users}}
    <a href="/users/{{this._id}}" class="link user-card">
      <div class="user-image">
        <img src="{{this.photoUrl}}" alt="{{this.username}}'s profile image">
      </div>
      <div class="profile-name">
        {{this.firstName}} {{this.lastName}}
      </div>
    </a>
    {{/each}}
  </div>

  <div class="button primary">
    <a href="/users/new">
      New User
    </a>
  </div>
</div>